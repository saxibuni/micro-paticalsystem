{
  "compilerOptions": {
    "strictNullChecks": false,
    "target": "ESNext",
    "outDir": "./dist/esm",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "lib": ["esnext", "DOM"]
  },
  "include": ["src/**/*"]
}